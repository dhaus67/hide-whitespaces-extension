{
  "manifest_version": 3,
  "name": "GitHub PR Whitespace Hider",
  "version": "1.0.2",
  "description": "Automatically hides whitespace changes in GitHub PR diffs",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["https://github.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "github-pr-whitespace-hider@dhaus.io"
    }
  }
}
